public class Multi {
    public static int calcularMult(int a, int b){
        if (b == 0) {
            return 0;
        } else {
            return (calcularMult(a, b-1)) + a;
        }
    }
}


public class Potencia {
    public static int calcularPow(int a, int b) { 
        if (b == 0) {
            return 1;
        } else {
            return calcularPow(a, b-1)*a;
        }
    }
